---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionIntro from "../components/SectionIntro.astro";
import SectionEducation from "../components/SectionEducation.astro";
import SectionSkills from "../components/SectionSkills.astro";
import ProjectCardGrid from "../components/ProjectCardGrid.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

const latestPost = posts.length > 0 ? posts[0] : null;

const projects = await getCollection("project");
---

<BaseLayout title="Dani Bengl - Portfolio">
  <div>
    <section>
      <div>
        <h1>Hello, I'm Dani!</h1>
        <p>
          Welcome to my digital corner! I'm a passionate Software Developer from Austria,
          currently pursuing my Master's degree in Software Engineering & Internet Computing at TU Wien.
          I love creating efficient, scalable solutions and exploring the latest technologies.
        </p>
        
        <div>
          <a
            href="/about"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            About Me
          </a>
          
          <a
            href="/projects"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            View Projects
          </a>
          
          <a
            href="/blog"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Read Blog
          </a>
        </div>
      </div>
    </section>

    {latestPost && (
      <section>
        <h2>Latest Blog Post</h2>
        
        <article>
          <div>
            <a href={`/blog/${latestPost.slug}`}>
              <h3>{latestPost.data.title}</h3>
            </a>
            
            <div>
              <span>
                Published on {latestPost.data.publishedAt.toLocaleDateString()}
              </span>
            </div>
            
            <p>{latestPost.data.description}</p>
            
            <a
              href={`/blog/${latestPost.slug}`}
            >
              Read More
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </article>
        
        <div>
          <a
            href="/blog"
          >
            All Posts
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </section>
    )}

    <section>
      <h2>Featured Project</h2>
      
      {projects.length > 0 && <ProjectCardGrid project={projects[0]} />}
      
      <div>
        <a
          href="/projects"
        >
          All Projects
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </section>

    <SectionIntro />
    <SectionEducation />
    <SectionSkills />
  </div>
</BaseLayout>
