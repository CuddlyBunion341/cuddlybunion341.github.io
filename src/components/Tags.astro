---
interface Props {
  tags: string[];
  path: (tag: string) => string;
  taggedCount?: (tag: string) => number;
  activeTag?: string;
}

const { tags, path, taggedCount, activeTag } = Astro.props;
---

{tags && tags.length > 0 && (
  <div class="tags" role="group" aria-label="Tags">
    {tags.map((tag) => (
      <a 
        href={path(tag)} 
        class={`tag ${activeTag === tag ? 'active' : ''}`}
        aria-label={`View posts tagged with ${tag}`}
        aria-current={activeTag === tag ? 'page' : undefined}
      >
        {tag}
        {taggedCount && (
          <span class="tag-count" aria-label={`${taggedCount(tag)} posts`}>
            ({taggedCount(tag)})
          </span>
        )}
      </a>
    ))}
  </div>
)}
