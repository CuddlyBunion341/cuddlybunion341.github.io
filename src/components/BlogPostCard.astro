---
import { Image } from "astro:assets";
import Tags from "./Tags.astro";
const { post } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
  <div>
    <div class="overflow-hidden">
      <a href={`/blog/${post.slug}`} class="block">
        <Image
          class="w-full h-[250px] object-cover"
          src={post.data.heroImage}
          inferSize={true}
          alt={post.data.title}
        />
      </a>
    </div>
    
    <div class="p-6">
      <a href={`/blog/${post.slug}`} class="block mb-2">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white leading-tight">{post.data.title}</h3>
      </a>
      
      <div class="flex items-center mb-4">
        <span class="text-sm text-gray-500 dark:text-gray-400 mr-4">
          ðŸ“… {new Date(post.data.publishedAt).toLocaleDateString("en-GB").split("/").join(".")}
        </span>
        <Tags tags={post.data.tags} path={(tag) => `/blog/tags/${tag}`} />
      </div>
      
      {post.data.description && (
        <p class="text-gray-600 dark:text-gray-300 mb-4">{post.data.description}</p>
      )}
      
      <a 
        href={`/blog/${post.slug}`} 
        class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
      >
        Read more
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</article>
