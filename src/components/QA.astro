---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<div
  class="bg-gray-50 dark:bg-gray-700 p-5 rounded-lg border border-gray-200 dark:border-gray-600 shadow-sm hover:shadow-md transition-all"
>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
    {question}
  </h3>
  <p class="text-gray-600 dark:text-gray-300">{answer}</p>
</div>
