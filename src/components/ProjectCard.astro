---
import Tags from "./Tags.astro";
import HeroImage from "./HeroImage.astro";
const { project } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 flex flex-row min-h-[250px]">
  <a href={`/projects/${project.slug}`} class="block overflow-hidden w-1/3 min-w-[250px] max-w-[400px] hidden sm:block">
    <div class="w-full h-full overflow-hidden">
      <HeroImage 
        imagePath={project.data.heroImage} 
        altText={project.data.name} 
      />
    </div>
  </a>
  
  <div class="p-6 flex-grow flex flex-col">
    <a href={`/projects/${project.slug}`} class="block mb-3">
      <h2 class="text-2xl font-semibold hover:text-blue-500 transition-colors">{project.data.name}</h2>
    </a>
    
    <!-- Mobile image (visible only on small screens) -->
    <a href={`/projects/${project.slug}`} class="block mb-4 sm:hidden">
      <div class="w-full h-[200px] overflow-hidden rounded">
        <HeroImage 
          imagePath={project.data.heroImage} 
          altText={project.data.name} 
        />
      </div>
    </a>
    
    <p class="text-gray-600 dark:text-gray-300 mb-4">{project.data.description}</p>
    
    <div class="mt-auto">
      <Tags tags={project.data.tags} />
      
      <div class="flex gap-4 mt-4">
        {project.data.demo && (
          <a 
            href={project.data.demo} 
            class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors flex items-center"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Live Demo
          </a>
        )}
        
        {project.data.github && (
          <a 
            href={project.data.github} 
            class="px-4 py-2 bg-gray-200 text-gray-800 dark:bg-gray-700 dark:text-gray-200 rounded hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors flex items-center"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        )}
      </div>
    </div>
  </div>
</article>
