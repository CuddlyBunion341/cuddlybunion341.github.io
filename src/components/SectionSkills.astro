---
import ProgrammingLanguage from "./ProgrammingLanguage.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const languages = [...new Set(projects.flatMap((p) => p.data.tags))];
---

<section>
  <h2>Tech</h2>
  
  <ul>
    <ProgrammingLanguage name="JavaScript" />
    <ProgrammingLanguage name="TypeScript" />
    <ProgrammingLanguage name="Python" />
    <ProgrammingLanguage name="Java" />
    <ProgrammingLanguage name="C++" />
    <ProgrammingLanguage name="React" />
    <ProgrammingLanguage name="Node.js" />
    <ProgrammingLanguage name="Docker" />
    <ProgrammingLanguage name="Git" />
    <ProgrammingLanguage name="Linux" />
  </ul>
  
  <h3>Project Technologies</h3>
  <ul>
    {languages.map(language => (
      <li>{language}</li>
    ))}
  </ul>
</section>
