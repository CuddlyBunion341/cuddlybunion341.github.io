---
const { project } = Astro.props;
---

<article>
  <h3>{project.data.name}</h3>

  <p>{project.data.description}</p>

  <div>
    {
      project.data.demo && (
        <a
          href={project.data.demo}
          target="_blank"
          rel="noopener noreferrer"
          class="action-link"
        >
          Live Demo
        </a>
      )
    }

    {
      project.data.github && (
        <a
          href={project.data.github}
          target="_blank"
          rel="noopener noreferrer"
          class="action-link"
        >
          GitHub
        </a>
      )
    }

    <a href={`/projects/${project.slug}`} class="action-link"> Read More </a>
  </div>
</article>
